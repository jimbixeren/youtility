        <Button x:Name="btnMinus" Clicked="btnMinus_Clicked" Text="minus" />


        <Label x:Name="labelResultat" Text="Resultat vises nedenfor" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name="finalResult" Text="her skal resultatet stå" FontSize="16" Padding="30,0,30,0"/>
      
    </StackLayout>


















